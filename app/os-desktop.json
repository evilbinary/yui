              }
            }
          ],
          "events": {
            "onClick": "@openApp"
          }
        },
        
        {
          "id": "app8",
          "type": "View",
          "position": [350, 180],
          "size": [80, 100],
          "style": {
            "bgColor": "transparent"
          },
          "children": [
            {
              "id": "app8Icon",
              "type": "Image",
              "position": [10, 10],
              "size": [60, 60],
              "source": "calc.svg",
              "style": {
                "bgColor": "$secondary",
                "borderRadius": 12,
                "shadow": "0 4px 8px rgba(0,0,0,0.2)",
                "hoverBgColor": "$secondary",
                "hoverScale": 1.05,
