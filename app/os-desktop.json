{
  "id": "osDesktop",
  "type": "View",
  "position": [
    0,
    0
  ],
  "style": {
    "color": "#ffffff",
    "bgColor": "#1e3c72"
  },
  "children": [
    // 顶部菜单栏
    {
      "id": "menuBar",
      "type": "View",
      "position": [
        0,
        0
      ],
      "size": [
        800,
        28
      ],
      "style": {
        "bgColor": "rgba(0, 0, 0, 0.3)",
        "borderBottom": "1px solid rgba(255, 255, 255, 0.2)"
      },
      "layout": {
        "type": "horizontal",
        "spacing": 10,
        "padding": [
          4,
          4,
          4,
          10
        ]
      },
      "children": [
        // 苹果菜单
        {
          "id": "appleMenu",
          "type": "Label",
          "text": "",
          "style": {
            "color": "#ffffff",
            "fontSize": 16,
            "fontWeight": "500"
          },
          "events": {
            "onClick": "@openAppleMenu"
          }
        },
        // 应用程序菜单
        {
          "id": "appMenu",
          "type": "Label",
          "text": "应用程序",
          "style": {
            "color": "#ffffff",
            "fontSize": 13
          },
          "events": {
            "onClick": "@openAppMenu"
          }
        },
        {
          "id": "fileMenu",
          "type": "Label",
          "text": "文件",
          "style": {
            "color": "#ffffff",
            "fontSize": 13
          },
          "events": {
            "onClick": "@openFileMenu"
          }
        },
        {
          "id": "editMenu",
          "type": "Label",
          "text": "编辑",
          "style": {
            "color": "#ffffff",
            "fontSize": 13
          },
          "events": {
            "onClick": "@openEditMenu"
          }
        },
        {
          "id": "viewMenu",
          "type": "Label",
          "text": "视图",
          "style": {
            "color": "#ffffff",
            "fontSize": 13
          },
          "events": {
            "onClick": "@openViewMenu"
          }
        },
        {
          "id": "windowMenu",
          "type": "Label",
          "text": "窗口",
          "style": {
            "color": "#ffffff",
            "fontSize": 13
          },
          "events": {
            "onClick": "@openWindowMenu"
          }
        },
        {
          "id": "helpMenu",
          "type": "Label",
          "text": "帮助",
          "style": {
            "color": "#ffffff",
            "fontSize": 13
          },
          "events": {
            "onClick": "@openHelpMenu"
          }
        }
        
      ]
    },
    // 桌面快捷方式
    {
      "id": "desktopShortcuts",
      "type": "View",
      "position": [
        20,
        40
      ],
      "size": [
        800,
        500
      ],
      "style": {
      },
      "children": [
        {
          "id": "shortcut1",
          "type": "View",
          "position": [
            0,
            0
          ],
          "size": [
            80,
            100
          ],
          "style": {
            "bgColor": "transparent",
            "borderRadius": 8
          },
          "children": [
            {
              "id": "shortcut1Icon",
              "type": "Image",
              "position": [
                10,
                10
              ],
              "size": [
                60,
                60
              ],
              "source": "folder.svg",
              "style": {
                "bgColor": "rgba(255, 255, 255, 0.9)",
                "borderRadius": 12
              }
            },
            {
              "id": "shortcut1Label",
              "type": "Label",
              "position": [
                0,
                75
              ],
              "text": "此电脑",
              "style": {
                "color": "#ffffff",
                "fontSize": 12,
                "width": 80,
                "textAlign": "center"
              }
            }
          ],
          "events": {
            "onClick": "@openShortcut",
            "onDoubleClick": "@openShortcut"
