          }
        }
      ]
    },
    
    // 底部Docker栏
    {
      "id": "docker",
      "type": "HStack",
      "position": [0, 532],
      "size": [800, 68],
      "spacing": 20,
      "padding": [20, 0],
      "style": {
        "bgColor": "rgba(var(--surface-rgb), 0.7)",
        "backdropFilter": "blur(20px) saturate(180%)",
        "borderTop": "1px solid #e0e0e0",
        "shadow": "0 -4px 12px rgba(0,0,0,0.08)"
      },
      "children": [
        // 动态分隔线
        {
          "id": "dockerSeparator",
          "type": "View",
          "size": [1, 40],
          "style": {
            "bgColor": "rgba(var(--border-rgb), 0.2)",
            "marginLeft": 15
          }
        },
        {
          "id": "dockerApp1",
          "type": "Image",
          "position": [20, 9],
          "size": [50, 50],
          "source": "duck.png",
          "style": {
            "bgColor": "$primary",
            "borderRadius": 10,
            "shadow": "0 2px 4px rgba(0,0,0,0.2)",
            "hoverBgColor": "$primary",
            "hoverScale": 1.08,
            "activeScale": 0.95,
            "transition": "transform 0.25s cubic-bezier(0.18, 0.89, 0.32, 1.28), box-shadow 0.2s ease"
          },
          "events": {
            "onClick": "@openDockerApp"
          }
        },
        
        {
          "id": "dockerApp2",
          "type": "Image",
          "position": [80, 9],
          "size": [50, 50],
          "source": "folder.svg",
          "style": {
            "bgColor": "$accent",
            "borderRadius": 10,
            "shadow": "0 2px 4px rgba(0,0,0,0.2)",
            "hoverBgColor": "$accent",
            "hoverScale": 1.1,
            "transition": "all 0.3s ease"
          },
          "events": {
            "onClick": "@openDockerApp"
          }
        },
        
        {
          "id": "dockerApp3",
          "type": "Image",
          "position": [140, 9],
          "size": [50, 50],
          "source": "code.svg",
          "style": {
            "bgColor": "$secondary",
            "borderRadius": 10,
            "shadow": "0 2px 4px rgba(0,0,0,0.2)",
