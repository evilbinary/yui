{
    "id": "loginPage",
    "type": "Panel",
    "theme": "default",
    "style": {
        "color": "#FFFFFF",
        "bgColor": "#1E88E5"
    },
    "size": [
        500,
        400
    ],
    "layout": {
        "type": "vertical",
        "align":"center",
        "spacing": 20,
        "padding": [
            40,
            40,
            40,
            40
        ]
    },
    "children": [
        {
            "id": "logo",
            "type": "Image",
            "source": "duck.png",
            "style": {
                "mode": "fit"
            }
        },
        {
            "id": "loginTitle",
            "type": "Label",
            "text": "用户登录",
            "style": {
                "color": "#1976D2"
            }
        },
        {
            "id": "emailInput",
            "type": "Input",
            "label": "邮箱",
            "size":[240,40],
            "placeholder": "请输入邮箱地址",
            "events": {
                "onChange": "@validateEmail"
            },
            "dataBinding": {
                "path": "user.email"
            },
            "style": {
                "color": "#212121",
                "bgColor": "#E3F2FD"
            },
            "layout": {
                "spacing": 10
            }
        },
        {
            "id": "pwdInput",
            "type": "Input",
            "label": "密码",
            "placeholder": "请输入密码",
            "size":[240,40],
            "events": {
                "onChange": "@validatePassword"
            },
            "dataBinding": {
                "path": "user.password"
            },
            "style": {
                "color": "#212121",
                "bgColor": "#E3F2FD"
            },
            "layout": {
                "spacing": 10
            }
        },
        {
            "id": "loginBtn",
            "type": "Button",
            "text": "登录",
            "size":[240,40],
            "style": {
                "color": "#FFFFFF",
                "bgColor": "#1976D2"
            },
            "layout": {
                "type":"center",
                "spacing": 10
            },
            "events": {
                "onClick": "@submitLogin"
            }
        },
        {
            "id": "registerLink",
            "type": "Button",
            "text": "还没有账号？立即注册",
            "size":[240,40],
            "style": {
                "color": "#1976D2",
                "bgColor": "#F5F5F5"
            },
            "events": {
                "onClick": "@goToRegister"
            }
        }
    ]
}