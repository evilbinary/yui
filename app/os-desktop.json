              }
            },
            {
              "id": "app6Label",
              "type": "Label",
              "position": [0, 80],
              "text": "图片查看器",
              "style": {
                "color": "$text",
                "fontSize": 13,
                "width": 80,
                "textAlign": "center",
                "textShadow": "0 1px 2px rgba(0,0,0,0.3)"
              }
            }
          ],
          "events": {
            "onClick": "@openApp"
          }
        },
        
        {
          "id": "app7",
          "type": "View",
          "position": [250, 180],
          "size": [80, 100],
          "style": {
            "bgColor": "transparent"
          },
          "children": [
            {
              "id": "app7Icon",
              "type": "Image",
              "position": [10, 10],
