          ],
          "events": {
            "onClick": "@openApp"
          }
        },
        
        {
          "id": "app6",
          "type": "View",
          "position": [150, 180],
          "size": [80, 100],
          "style": {
            "bgColor": "transparent"
          },
          "children": [
            {
              "id": "app6Icon",
              "type": "Image",
