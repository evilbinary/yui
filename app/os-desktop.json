          }
        },
        
        // 中间分隔线
        {
          "id": "dockerSeparator",
          "type": "View",
          "position": [380, 15],
          "size": [2, 38],
          "style": {
            "bgColor": "$border",
            "borderRadius": 1
          }
        },
        
        // 右侧系统图标
        {
          "id": "trashIcon",
          "type": "Image",
          "position": [730, 9],
          "size": [50, 50],
          "source": "trash.svg",
          "style": {
            "bgColor": "$surfaceLight",
            "borderRadius": 10,
            "shadow": "0 2px 4px rgba(0,0,0,0.2)",
            "hoverBgColor": "$surfaceLight",
            "hoverScale": 1.1,
            "transition": "all 0.3s ease"
          }
        }
      ]
    }
  ]
}