{
    "id": "tabTestApp",
    "type": "View",
    "theme": "default",
    "style": {
        "color": "#2C3E50",
        "bgColor": "#F5F5F5"
    },
    "layout": {
        "type": "vertical",
        "spacing": 0,
        "padding": [
            20,
            20,
            20,
            20
        ]
    },
    "children": [
        {
            "id": "title",
            "type": "Label",
            "text": "选项卡组件测试",
            "style": {
                "type": "center",
                "color": "#1976D2",
                "fontSize": 24,
                "marginBottom": 20
            }
        },
        {
            "id": "tabContainer",
            "type": "Tab",
            "position": [
                0,
                0
            ],
            "size": [
                600,
                400
            ],
            "tabHeight": 40,
            "activeTab": 0,
            "closable": false,
            "style": {
                "tabColor": "#E0E0E0",
                "activeTabColor": "#FFFFFF",
                "textColor": "#757575",
                "activeTextColor": "#1976D2",
                "borderColor": "#BDBDBD"
            },
            "tabs": [
                {
                    "title": "首页",
                    "type": "View",
                    "layout": {
                        "type": "vertical",
                        "spacing": 15,
                        "padding": [
                            20,
                            20,
                            20,
                            20
                        ]
                    },
                    "children": [
                        {
                            "type": "Label",
                            "text": "欢迎来到首页",
                            "style": {
                                "type": "center",
                                "fontSize": 20,
                                "color": "#1976D2",
                                "marginBottom": 10
                            }
                        },
                        {
                            "type": "Label",
                            "text": "这是首页的内容区域，可以放置各种控件和信息。",
                            "style": {
                                "fontSize": 16,
                                "color": "#424242"
                            }
                        }
                    ]
                },
                {
                    "title": "设置",
                    "type": "View",
                    "layout": {
                        "type": "vertical",
                        "spacing": 15,
                        "padding": [
                            20,
                            20,
                            20,
                            20
                        ]
                    },
                    "children": [
                        {
                            "type": "Label",
                            "text": "应用设置",
                            "style": {
                                "type": "center",
                                "fontSize": 20,
                                "color": "#1976D2",
                                "marginBottom": 10
                            }
                        },
                        {
                            "type": "Checkbox",
                            "label": "启用通知",
                            "data": true,
                            "style": {
                                "color": "#2196F3",
                                "bgColor": "#FFFFFF",
                                "borderColor": "#2196F3"
                            }
                        },
                        {
                            "type": "Checkbox",
                            "label": "自动保存",
                            "size": [20, 20],
                            "data": false,
                            "style": {
                                "color": "#2196F3",
                                "bgColor": "#FFFFFF",
                                "borderColor": "#2196F3"
                            }
                        },
                        {
                            "type": "Slider",
                            "position": [
                                0,
                                0
                            ],
                            "size": [
                                200,
                                30
                            ],
                            "data": 50,
                            "min": 0,
                            "max": 100,
                            "step": 1,
                            "orientation": 0,
                            "style": {
                                "trackColor": "#E0E0E0",
                                "thumbColor": "#2196F3",
                                "activeThumbColor": "#1976D2"
                            }
                        }
                    ]
                },
                {
                    "title": "关于",
                    "type": "View",
                    "layout": {
                        "type": "vertical",
                        "spacing": 15,
                        "padding": [
                            20,
                            20,
                            20,
                            20
                        ]
                    },
                    "children": [
                        {
                            "type": "Label",
                            "text": "关于应用",
                            "style": {
                                "type": "center",
                                "fontSize": 20,
                                "color": "#1976D2",
                                "marginBottom": 10
                            }
                        },
                        {
                            "type": "Label",
                            "text": "版本: 1.0.0",
                            "style": {
                                "fontSize": 16,
                                "color": "#424242"
                            }
                        },
                        {
                            "type": "Label",
                            "text": "作者: YUI Team",
                            "style": {
                                "fontSize": 16,
                                "color": "#424242"
                            }
                        },
                        {
                            "type": "Label",
                            "text": "这是一个使用YUI框架构建的示例应用。",
                            "style": {
                                "fontSize": 16,
                                "color": "#424242",
                                "marginTop": 10
                            }
                        }
                    ]
                }
            ],
            "events": {
                "onTabChanged": "@handleTabChange"
            }
        },
        {
            "id": "tabStatus",
            "type": "Label",
            "text": "当前选项卡: 首页",
            "height": 20,
            "style": {
                "color": "#2C3E50",
                "fontSize": 16,
                "marginTop": 20
            }
        }
    ],
    "events": {
        "onLoad": "@initTabs",
        "handleTabChange": "function(oldTab, newTab) { const tabNames = ['首页', '设置', '关于']; document.getElementById('tabStatus').text = '当前选项卡: ' + tabNames[newTab]; }"
    }
}