        },
        
        // 第二行应用图标
        {
          "id": "app5",
          "type": "View",
          "position": [50, 180],
          "size": [80, 100],
          "style": {
            "bgColor": "transparent"
          },
          "children": [
            {
              "id": "app5Icon",
