{
    "id": "jsonEditorApp",
    "type": "View",
    "size": [1800, 900],
    "style": {
        "bgColor": "#ffffff"
    },
    "js": ["../lib/http.js","api-client.js", "json-editor.js"],
    "layout": {
        "type": "vertical",
        "spacing": 0
    },
    "children": [
        {
            "id": "contentPanel",
            "type": "View",
            "size": [1200, 750],
            "layout": {
                "type": "horizontal",
                "spacing": 5
            },
            "children": [
                {
                    "id": "editorPanel",
                    "type": "View",
                    "size": [600, 750],
                    "style": {
                        "bgColor": "#2b2b2b",
                        "borderWidth": 1,
                        "borderColor": "#cccccc"
                    },
                    "layout": {
                        "type": "vertical",
                        "spacing": 0
                    },
                    "children": [
                        {
                            "id": "editorHeader",
                            "type": "View",
                            "size": [600, 40],
                            "style": {
                                "bgColor": "#1e1e1e",
                                "borderRadius": [8, 8, 0, 0],
                                "borderBottomWidth": 1,
                                "borderBottomColor": "#333333"
                            },
                            "layout": {
                                "type": "horizontal",
                                "spacing": 10,
                                "padding": [10, 10, 10, 10],
                                "justifyContent": "left"
                            },
                            "children": [
                                {
                                    "type": "Label",
                                    "label": "JSON编辑器",
                                    "text": "JSON编辑器",
                                    "size": [120, 20],
                                    "style": {
                                        "color": "#ffffff",
                                        "fontSize": 14
                                    }
                                },
                                {
                                    "id": "validateBtn",
                                    "type": "Button",
                                    "text": "验证",
                                    "size": [60, 25],
                                    "style": {
                                        "bgColor": "#4caf50",
                                        "color": "#ffffff",
                                        "fontSize": 12,
                                        "borderRadius": 4
                                    }
                                },
                                {
                                    "id": "formatBtn",
                                    "type": "Button",
                                    "text": "格式化",
                                    "size": [70, 25],
                                    "style": {
                                        "bgColor": "#2196f3",
                                        "color": "#ffffff",
                                        "fontSize": 12,
                                        "borderRadius": 4
                                    }
                                }
                            ]
                        },
                        {
                            "id": "jsonEditor",
                            "type": "Text",
                            "text": "",
                            "size": [600, 710],
                            "scrollable": 1,
                            "showLineNumbers":true,
                            "lineNumberWidth": 40,
                            "selectionColor": "#6BAF52CC",
                            "style": {
                                "bgColor": "#2b2b2b",
                                "color": "#f8f8f2",
                                "fontSize": 14,
                                "padding": [10, 10, 10, 10],
                                "fontFamily": "monospace",
                                "borderLeftWidth": 1,
                                "borderLeftColor": "#333333"
                            },
                            "editable": true,
                            "multiline": true,
                            "syntaxHighlight": "json"
                        }
                    ]
                },
                {
                    "id": "previewPanel",
                    "type": "View",
                    "size": [590, 750],
                    "style": {
                        "bgColor": "#ffffff",
                        "borderWidth": 1,
                        "borderColor": "#cccccc"
                    },
                    "layout": {
                        "type": "vertical",
                        "spacing": 0
                    },
                    "children": [
                        
                        {
                            "id": "previewLabel",
                            "type": "Label",
                            "text": "",
                            "size": [590, 670],
                            "layout":{
                                "type": "vertical",
                                "align": "center",
                                "justifyContent": "center",
                                "padding": [0, 0, 0, 0]
                            },
                            "scrollable": 2,
                            "style": {
                                "bgColor": "#ffffff",
                                "color": "#333333",
                                "fontSize": 13,
                                "fontFamily": "monospace",
                                "textAlign": "left",
                                "lineHeight": 1.5,
                                "padding": [20, 20, 20, 20],
                                "scrollable": true
                            }
                        },
                        {
                            "id": "inputLabel",
                            "type": "Label",
                            "text": "",
                            "size": [590, 40],
                            "style": {
                                "bgColor": "#ffffff",
                                "color": "#333333",
                                "fontSize": 13,
                                "fontFamily": "monospace",
                                "textAlign": "left",
                                "lineHeight": 1.5,
                                "padding": [20, 20, 20, 20],
                                "scrollable": true
                            }
                        }
                    ]
                }
            ]
        },
        {
            "id": "inputContainer",
            "type": "View",
            "size": [1200, 50],
            "layout": {
                "type": "horizontal",
                "spacing": 10,
                "padding": [10, 10, 10, 10],
                "justifyContent": "center",
                "alignItems": "center"
            },
            "style": {
                "bgColor": "#2b2b2b",
                "borderTopWidth": 1,
                "borderTopColor": "#333333"
            },
            "children": [
                {
                    "id": "messageInput",
                    "type": "Text",
                    "text": "",
                    "placeholder": "输入需要生成的UI内容...",
                    "size": [400, 35],
                    "style": {
                        "bgColor": "#ffffff",
                        "color": "#495057",
                        "fontSize": 13,
                        "padding": [10, 10, 10, 10],
                        "borderWidth": 1,
                        "borderColor": "#ced4da",
                        "borderRadius": 4
                    },
                    "editable": true,
                    "multiline": false
                },
                {
                    "id": "updateModeSelect",
                    "type": "Select",
                    "text": "增量更新",
                    "size": [100, 35],
                    "style": {
                        "bgColor": "#ffffff",
                        "color": "#495057",
                        "fontSize": 13,
                        "borderWidth": 1,
                        "borderColor": "#ced4da",
                        "borderRadius": 4
                    },
                    "items": [
                        {"label": "增量更新", "value": "incremental"},
                        {"label": "全量更新", "value": "full"}
                    ]
                },
                {
                    "id": "sendBtn",
                    "type": "Button",
                    "text": "生成",
                    "size": [100, 35],
                    "style": {
                        "bgColor": "#2196f3",
                        "color": "#ffffff",
                        "fontSize": 13,
                        "borderRadius": 4,
                        "fontWeight": "bold"
                    }
                }
            ]
        }
    ],
    "events": {
        "onLoad": "@initJsonEditor",
        "jsonEditor.onChange": "@onJsonChange",
        "validateBtn.onClick": "@validateJson",
        "formatBtn.onClick": "@formatJson",
        "refreshBtn.onClick": "@refreshPreview",
        "sendBtn.onClick": "@sendMessage",
        "updateModeSelect.onChange": "@onUpdateModeChange"
    }
}
